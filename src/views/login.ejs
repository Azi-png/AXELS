<%- include('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/login.css" />

<body>
  <form class="login-container" action="/admin/login" METHOD="POST">
    <div class="login-frame">
      <div class="login-input-frame">
        <div class="login-input-container">
          <h6 class="log">Welcome Back!</h6>
          <label>Jewelry store Admin *</label>
          <input
            type="text"
            name="memberNick"
            class="member-nick"
            placeholder="Username"
            value=""
            required
          />
        </div>
        <div class="login-input-container">
          <label>Password *</label>
          <input
            type="password"
            name="memberPassword"
            class="member-password"
            placeholder="Password"
            value=""
            required
          />
        </div>
      </div>
      <button class="login-btn btn" name="login" type="submit">Login</button>
      <div class="login-top">
        <div>Go back <a href="/admin" style="color: #6440fb">Home</a></div>
        <p>
          Not registered yet?
          <a href="/admin/signup" style="color: #6440fb">Signup</a>
        </p>
      </div>
    </div>
    <img src="/img/lastt.png" alt="" />
  </form>
</body>

<%- include('includes/footer') %>
